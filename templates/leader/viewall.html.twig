{% extends 'base.html.twig' %}

{% block title %}Hello PolitiqueController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container fontA styleBlocCentral">
    <div class="barreBlocElement"></div>
    <h3 class="text-white">Leaders</h3>
    <div class="row">
        <div class="col-sm">
            <div class="container pb-4">
                {% for leader in leaders %}
                    <tr class="">
                        <td> <a href="{{ path('leaderview', {id:leader.id}) }}"> {{ leader.nom }} {{ leader.prenom }}</a></td>
                        <td><img height="24px" width="24px" src="{{ leader.photo }}"/></td>
                    </tr>
                {% endfor %}

            </div>
        </div>
    </div>





</div>
{% endblock %}
